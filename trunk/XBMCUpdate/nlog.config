<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true" internalLogFile="nlogErrors.txt">
  <targets>
    <target name="file" xsi:type="File" fileName="${basedir}\\logs\\${date:format=m}.log"
               layout="${longdate}-${callsite}|${level}|${message} ${exception:format=ToString}"/>
  </targets>
  <rules>
    <logger name="*" minLevel="Trace"  writeTo="file"/>
  </rules>
</nlog>
